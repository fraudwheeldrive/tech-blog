  
<div class="post-list">
  {{#each posts as |post|}}
    <article class="post">
      <div class="title">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <div class="meta created-data">
          {{user.username}} on {{format_date created_at}}
        </div>
      </div>
      <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </article>
  {{/each}}
</div>
