<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
   <article class="post">
       <div class="post-content">
           <h2>{{post.title}}</h2>
           <p>{{post.content}}</p>
       </div class="meta created-data">
       {{user.username}} on {{format_date created_at}}
       </div>
       </div>
       <div class="meta">
           <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
       </div>
       <span> <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post </a></span>
   </article>
    {{/each}}
  </ol>
</section>
{{/if}}

<a class="new-anchor" href="/dashboard/new"><button class ="new-post-btn>New Post</button></a>
<script src="/javascript/add-post.js"></script>